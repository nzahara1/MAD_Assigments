<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InboxActivity">

    <ImageButton
        android:id="@+id/inbox_logout"
        android:layout_width="109dp"
        android:layout_height="75dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="46dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/inbox_username"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add" />

    <ImageButton
        android:id="@+id/inbox_create"
        android:layout_width="109dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logout" />

    <TextView
        android:id="@+id/inbox_username"
        android:layout_width="107dp"
        android:layout_height="34dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="74dp"
        android:text="@string/inboxusername"
        app:layout_constraintStart_toEndOf="@+id/inbox_create"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="398dp"
        android:layout_height="589dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inbox_logout" />
</androidx.constraintlayout.widget.ConstraintLayout>
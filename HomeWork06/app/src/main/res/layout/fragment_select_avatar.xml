<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectAvatar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/f_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="71dp"
            android:src="@drawable/avatar_f_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/f_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            android:layout_marginTop="72dp"
            android:src="@drawable/avatar_f_2"
            app:layout_constraintStart_toEndOf="@+id/f_1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/f_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/avatar_f_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_1" />

        <ImageView
            android:id="@+id/m_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/avatar_m_1"
            app:layout_constraintStart_toEndOf="@+id/f_3"
            app:layout_constraintTop_toBottomOf="@+id/f_2" />

        <ImageView
            android:id="@+id/m_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"
            android:layout_marginTop="43dp"
            android:src="@drawable/avatar_m_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_3" />

        <ImageView
            android:id="@+id/m_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"
            android:layout_marginTop="38dp"
            android:src="@drawable/avatar_m_3"
            app:layout_constraintStart_toEndOf="@+id/m_2"
            app:layout_constraintTop_toBottomOf="@+id/m_1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>